<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="cpweb" version="3.0">
    <display-name>cpweb</display-name>
    <distributable/>
    <filter>
        <filter-name>cpweb</filter-name>
        <filter-class>net.unixdeveloper.druwa.DruwaApplicationFilter</filter-class>
        <init-param>
            <param-name>applicationClass</param-name>
            <param-value>se.dabox.cocobox.cpweb.CustomerPortalApplication</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>monthCacheFilter</filter-name>
        <filter-class>net.unixdeveloper.druwa.cache.CacheHeaderFilter</filter-class>
        <init-param>
            <param-name>cacheTime</param-name>
            <param-value>2592000</param-value>
        </init-param>
        <init-param>
            <param-name>cacheHeader</param-name>
            <param-value>public, must-revalidate</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>dayCacheFilter</filter-name>
        <filter-class>net.unixdeveloper.druwa.cache.CacheHeaderFilter</filter-class>
        <init-param>
            <param-name>cacheTime</param-name>
            <param-value>86400</param-value>
        </init-param>
        <init-param>
            <param-name>cacheHeader</param-name>
            <param-value>public, must-revalidate</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>cpweb</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>monthCacheFilter</filter-name>
        <url-pattern>/js/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>dayCacheFilter</filter-name>
        <url-pattern>/css/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>dayCacheFilter</filter-name>
        <url-pattern>/img/*</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>
            120
        </session-timeout>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>
    <welcome-file-list>
        <welcome-file>/index.html</welcome-file>
    </welcome-file-list>
</web-app>
